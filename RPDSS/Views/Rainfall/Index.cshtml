@model IEnumerable<RPDSS.DataLayer.Models.RainfallModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rainfall Data</h2>

<p>
    <a asp-action="New">Create New</a>
</p>
<table class="table table-striped table-hover table-sm">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Month)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rainfall)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Calendar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rainfall)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, isfordetails = true }) |
                @Html.ActionLink("Delete", "Details", new { id = item.Id, isfordetails = false })
            </td>
        </tr>
}
    </tbody>
</table>
