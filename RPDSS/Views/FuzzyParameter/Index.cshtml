@model IEnumerable<RPDSS.DataLayer.Models.FuzzyParameterModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Fuzzy Parameter Data</h2>

<p>
    <a asp-action="New">Create New</a>
</p>
<table class="table table-striped table-hover table-sm">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GrowthStagesName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AbsoluteMin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OptimumMin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OptimumMax)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AbsoluteMax)
                </th>
                <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrowthStagesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AbsoluteMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptimumMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptimumMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AbsoluteMax)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, isfordetails = true }) |
                @Html.ActionLink("Delete", "Details", new { id = item.Id, isfordetails = false })
            </td>
        </tr>
}
    </tbody>
</table>
