@model IEnumerable<RPDSS.DataLayer.Models.RiceModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutBackend.cshtml";
}

<h2>Rice Profiles</h2>

<p>
    <a asp-action="New">Create New</a>
</p>
<table class="table table-striped table-hover table-sm">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AvgYield)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxYield)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Maturity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GrainSize)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvgYield)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxYield)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maturity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrainSize)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, isfordetails = true }) |
                @Html.ActionLink("Delete", "Details", new { id = item.Id, isfordetails = false })
            </td>
        </tr>
}
    </tbody>
</table>
